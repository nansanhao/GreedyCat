<!--pages/mapDetail/mapDetail.wxml-->
<view class="page-body">
    <view>
        <map latitude="{{latitude}}" longitude="{{longitude}}" markers="{{markers}}" polyline='{{polyline}}' controls="{{controls}}">
        </map>
    </view>
    <view class='section'>
        <view class='icon-wrap'>
            <view wx:for="{{icons}}" wx:for-item="icon" class='icon'>
                <image src="{{icon.isActive?icon.activeImageUrl:icon.inactiveImageUrl}} " class="icon-image" data-index='{{index}}' bindtap='iconTap'></image>
                <text class='icon-num'>{{icon.num}}</text>
            </view>

        </view>
    </view>
    <view class='description-wrap'>
        <view class='description'>
            <text>{{description}}</text>
        </view>
        <view class='userName'>
            <text>--{{author.nickName}}</text>
        </view>
    </view>
    <view class='comment-wrap'>
        <view class='comment-title'>
            <text class='comment-title-content'>用户评论</text>
            <image class='comment-title-image' src='../../icons/comment.png' aspectFit></image>
        </view>

        <view class='comment-body'>
            <view class='comment-body-item' wx:for="{{comments}}" wx:for-item="comment">
                <view>
                    <image src='{{comment.simple_user_info.avatarUrl}}' class='comment-image'></image>
                </view>
                <view class='comment-body-wrap'>
                    <view class='comment-body-userName'>
                        {{comment.simple_user_info.nickName}}
                    </view>
                    <view class='comment-body-content'>
                        {{comment.content}}
                    </view>

                </view>
            </view>
        </view>
    </view>
    <view class='footbar'>
        <view class='return'>
            <image class='return-img' src='../../icons/icon.png'></image>
            <text>首页</text>
        </view>
        <view class='share'>
            <image class='share-img' src='../../icons/icon.png'></image>
            <button class='share-btn' open-type='share'>分享</button>
        </view>
    </view>
</view>