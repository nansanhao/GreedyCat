/* pages/mapDetail/mapDetail.wxss */

map {
    width: 100%;
    height: 300px;
}

/*----------------------------------icon-----------------------------------------------*/

.icon-wrap {
    display: flex;
    justify-content: space-around;
    margin-bottom: 30rpx;
}

.icon-image {
    height: 120rpx;
    width: 120rpx;
    margin: 16rpx 0 0 0;
}

.icon {
    display: flex;
    flex-direction: column;
}

.icon-num {
    text-align: center;
}

/*----------------------------------description--------------------------------------------*/

.authorName {
    text-align: right;
}

.description-wrap {
    padding: 10px 15px;
    background-color: white;
    margin-bottom: 10px;
}

.description-locality {
    color: #eb6159;
    font-size: 14px;
    text-align: right;
    padding: 0 15px 10px 0;
}

/*----------------------------------comment-----------------------------------------------*/

.comment-title-image {
    position: absolute;
    top: 10px;
    right: -30rpx;
    height: 50rpx;
    width: 50rpx;
}


.comment-btn {
    position: absolute;
    right: 15px;
    width: 50rpx;
    height: 50rpx;
}

.comment-item {
    padding: 10px 15px;
    background-color: white;
    display: flex;
    flex-direction: column;
    border-top: 1rpx solid #d9d9d9;
}

.comment-head {
    display: flex;
    align-items: center;
}

.comment-userName {
    font-size: 14px;
}

.comment-avatar {
    height: 50rpx;
    width: 50rpx;
    border-radius: 50%;
    margin-right: 10px;
}

.comment-body {
    margin-top: 20rpx;
}

/*----------------------------------footbar-----------------------------------------------*/

.footbar {
    position: fixed;
    bottom: 0;
    display: flex;
    width: 100%;
    background-color: #fff;
    color: white;
    opacity: 0.8;
}

.footbar-image {
    width: 25px;
    height: 25px;
    margin-right: 40rpx;
}

.footbar-item {
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 1;
    font-size: 18px;
    box-sizing: border-box;
    position: relative;
}



.footbar-item:last-child:before {
    content: " ";
    position: absolute;
    height: 80%;
    left: 0;
    top:10%;
    border-left: 4rpx solid #eb6159;
}

.footbar-btn {
    margin: 0;
    padding: 10px 20px;
    text-align: center;
    background-color: #fff;
    border: none;
    color: #eb6159;
    line-height: 20px;
}

.footbar-btn::after , .footbar-btn::before {
    display: none;
}
