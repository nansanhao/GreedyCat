/* pages/mapDetail/mapDetail.wxss */
map{
    width: 100%; height: 300px;
}
.icon-wrap{
    display: flex;
    justify-content: space-around;
    background-color: whitesmoke;
}
.icon-image{
    height: 120rpx;
    width: 120rpx;
    margin:16rpx 0 0 0;
}
.icon{
    display: flex;
    flex-direction: column;
}
.icon-num{
    text-align: center;
}
.userName{
    text-align: right;
}
.description-wrap{
    padding: 20rpx 30rpx;
    background-color: white;
    
}
.comment-title-image{
    height: 70rpx;
    width: 70rpx;
}
.comment-title{
    text-align: center;
    display: flex;
    padding: 4rpx;
    align-items: center;
    justify-content: center; 
    background-color: white;
    margin: 40rpx  0 20rpx 0;

}
.comment-title-content{
    color: #EB6159;
}
.comment-image{
    height: 120rpx;
    width: 120rpx;
}
.comment-body-item{
    padding: 20rpx 30rpx;
    background-color: white;
    display: flex;
    margin:10rpx 0;
}
.comment-body-wrap{
    flex: 1;
    margin-left: 20rpx;
}
.menu-wrap{
    position: fixed;
    bottom: 80rpx;
    right: 30rpx;
    width: 120rpx;
    

}
.menu-plus{
    height: 120rpx;
    width: 120rpx;
    border-radius: 60rpx;
    box-shadow: 4rpx 4rpx 4rpx #888888;
    background: #EB6159;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 40px;
    color: white;
}
.menu-item{
    position: absolute;
    transition: all .4s;
    background-color: #EB6159;
    border-radius: 80rpx;
    color: white;
    padding: 8rpx 12rpx;
    margin-left: -60rpx;
    box-shadow: 4rpx 4rpx 4rpx #888888;
}
