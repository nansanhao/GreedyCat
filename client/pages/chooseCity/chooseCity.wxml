<!--pages/chooseCity/chooseCity.wxml-->
<scroll-view style="height:{{systemInfo.windowHeight}}px;" scroll-into-view="{{viewID}}" scroll-y="true" class="page-body">
  <view class="hot-city-box">
    <view class="box-title">
      <image class="title-icon" src="../../icons/icon.png" />
      <view class="title-text">热门城市</view>
    </view>
    <view class="city-items">
      <view class="city-item" wx:for="{{hotCity}}" wx:key="*this">{{item}}</view>
    </view>
  </view>
  <view class="city-list">
    <view wx:for="{{cityList}}" wx:key="name" wx:for-item="list" class="city-cells" >
      <view class="city-cell-title" id="{{list.name}}">{{list.name}}</view>
      <view wx:for="{{list.list}}" wx:key="*this" class="ui-cell city-cell"> 
        <view class="field">
          {{item}}
        </view>
      </view>
    </view>
  </view>
</scroll-view>
<view class="right-bar">
  <image class="bar-cell" src="../../icons/icon.png" bindtap='scrollTo'/>
  <view wx:for="{{cityList}}" class="bar-cell" wx:key="name" bindtap='scrollTo'>{{item.name}}</view>
</view>