/* pages/homePage/homePage.wxss */

.avatar, .nickname {
    display: flex;
    justify-content: space-around;
    background-color: #eb6159;
}

.nickname {
    color: white;
    padding: 20rpx 0 20rpx 0;
    font-size: 34rpx;
}

.avatar-image {
    height: 180rpx;
    width: 180rpx;
    border-radius: 100rpx;
}

.icon-wrap {
    display: flex;
    justify-content: space-around;
    background-color: whitesmoke;
}

.icon-image {
    height: 160rpx;
    width: 160rpx;
    margin: 16rpx 0;
}

.icon {
    display: flex;
    flex-direction: column;
}

.icon-num {
    text-align: center;
    color: #eb6159;
    font-size: 34rpx;
}

.hr {
    margin-top: 10px;
}

/*---------------------------------- modal--------------------------------------- */

.modal-inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 5px;
    width: 350rpx;
    box-sizing: border-box;
    position: relative;
}

.inner-close {
    position: absolute;
    right: 3px;
    top: 3px;
}

.inner-image {
    width: 240rpx;
    height: 240rpx;
}

.inner-text {
    font-size: 14px;
    text-align: center;
    padding: 20rpx 0;
}

.inner-button {
    background-color: #eb6159;
    margin: 0;
    color: #fff;
}
