/* pages/homePage/homePage.wxss */
.avatar,.nickname{
    display: flex;
    justify-content: space-around;
    background-color: #EB6159;
}
.nickname{
    color: white;
    padding: 40rpx 0 10rpx 0;
    font-size: 34rpx;
}
.avatar-image{
    height: 200rpx;
    width: 200rpx;
    border-radius: 100rpx;
}
.icon-wrap{
    display: flex;
    justify-content: space-around;
    background-color: whitesmoke;
}
.icon-image{
    height: 160rpx;
    width: 160rpx;
    margin:16rpx 0;
}
.icon{
    display: flex;
    flex-direction: column;
}
.icon-num{
    text-align: center;
    color: #EB6159;
    font-size: 34rpx;
}

.hr{
    margin-top: 10px;
}