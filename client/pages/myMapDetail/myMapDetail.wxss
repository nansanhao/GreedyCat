/* pages/myMapDetail/myMapDetail.wxss */

map {
    width: 100%;
    height: 300px;
}

/*----------------------------------icon-----------------------------------------------*/
.icon-wrap {
    display: flex;
    justify-content: space-around;
    margin-bottom: 30rpx;

}

.icon-image {
    height: 120rpx;
    width: 120rpx;
    margin: 16rpx 0 0 0;
}

.icon {
    display: flex;
    flex-direction: column;
}

.icon-num {
    text-align: center;
}

/*----------------------------------description--------------------------------------------*/
.authorName {
    text-align: right;
}

.description-wrap {
    padding: 10px 15px;
    background-color: white;
}

/*----------------------------------comment-----------------------------------------------*/

.comment-title-image {
    position: absolute;
    top: 10px;
    right: -30rpx;
    height: 50rpx;
    width: 50rpx;
}

.comment-item {
    padding: 10px 15px;
    background-color: white;
    display: flex;
    flex-direction: column;
    border-top: 1rpx solid #d9d9d9;
}

.comment-head {
    display: flex;
    align-items: center;
}

.comment-userName {
    font-size: 14px;
}
.comment-avatar {
    height: 50rpx;
    width: 50rpx;
    border-radius: 50%;
    margin-right: 10px;
}

.comment-body {
    margin-top: 20rpx;
}


/*----------------------------------marker-----------------------------------------------*/
.marker-img {
    width: 80rpx;
    height: 80rpx;
}

.markers-wrap {
    margin: 10px 0;
}

.marker {
    margin: 2rpx;
    background-color: white;
    display: flex;
    align-items: center;
}

.marker-tip {
    padding: 8px 0 10px 15px;
    font-size:14px;
    color:#888;
}

.marker-item{
    border-top:1rpx solid #d9d9d9;
}


/*----------------------------------menu-----------------------------------------------*/
.menu-wrap {
    position: fixed;
    bottom: 80rpx;
    right: 0;
    width: 200rpx;
}

.menu-plus {
    height: 120rpx;
    width: 120rpx;
    border-radius: 60rpx;
    box-shadow: 4rpx 4rpx 4rpx #888;
    background: #eb6159;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 40px;
    color: white;
}

.menu-item {
    position: absolute;
    transition: all 0.4s;
    background-color: #eb6159;
    border-radius: 80rpx;
    color: white;
    padding: 8rpx 12rpx;
    margin-left: -60rpx;
    box-shadow: 4rpx 4rpx 4rpx #888;
}
