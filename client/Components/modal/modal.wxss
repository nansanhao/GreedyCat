.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    background: #000;
    overflow: hidden;
    transition: opacity .5s;
}

.modal-box {
    overflow: hidden;
    position: fixed;
    z-index: 1001;
    background-color: #f8f8f8;
    border-radius: 2%;
    transition: top .5s;
}

.title {
    padding: 15px;
    text-align: center;
    font-size: 20px;
    font-weight: 500;
}

.content {
    padding: 0 25px 30rpx 25px;
    font-size: 15px;
    color: #888;
    border-bottom: 1px solid #d9d9d9;
    text-align: center;
    word-wrap: break-word;
    word-break: normal;
}

.btn {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.cancel {
    width: 100%;
    padding: 10px;
    text-align: center;
    color: #000;
}

.confirm {
    width: 100%;
    padding: 10px;
    font-size: 18px;
    text-align: center;
    color: #eb6159;
}
