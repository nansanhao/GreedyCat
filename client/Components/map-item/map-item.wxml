<!--Components/map-item/map-item.wxml-->
 <view class="map-item-box">
  <image class="map-item-image" src="../../icons/icon{{category}}.png"></image>
  <view class="map-item-right-part">
    <view class="map-name-box">
      <view class="map-name-head">{{mapName}}</view>
      <view class="map-name-foot">{{city+" "+locality}}</view>
    </view>
    <view class="map-description">{{description}}</view>
    <view class="map-counters-box">
      <view class="counter-box" wx:for="{{counters}}" >
        <image class="counter-icon" src="../../icons/icon{{index}}.png"></image>
        <view class="counter-number"> {{item}}</view>
      </view>
    </view>
  </view>
</view> 