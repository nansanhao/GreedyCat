/* Components/map-item/map-item.wxss */

.map-item-box {
  padding: 8px 10px;
  border-bottom: 1rpx solid #d9d9d9;
  display: flex;
  align-items: center;
  background-color: #fff;
}

.map-item-image {
  border-radius: 50%;
  margin:0 16rpx;
  width: 100rpx;
  height: 100rpx;
}

.map-item-right-part {
  flex: 1;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.map-name-box {
  display: flex;
  align-items: flex-end;
}

.map-name-head {
  flex: 1;
  font-size: 17px;
  font-weight: 600;
}

.map-name-foot {
  font-size: 12px;
  color: #eb6159;
}

.map-description {
  margin: 10rpx 0;
  width: 100%;
  font-size:15px;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box; 
  line-height: 20px;
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 2; 
  overflow: hidden; 
}

.map-counters-box {
  display: flex;
}

.counter-box {
  flex: 1;
  display: flex;
}

.counter-icon {
  width: 20px;
  height: 20px;
  margin-right:5px;
}
