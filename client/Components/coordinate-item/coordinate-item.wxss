/* Components/coordinate-item/coordinate-item.wxss */

.coordinate-item-box {
  padding: 16rpx 20rpx;
  border-bottom: 1rpx solid #d9d9d9;
  display: flex;
  align-items: center;
  background-color: #fff;
}

.coordinate-item-image {
  width: 150rpx;
  height: 150rpx;
}

.coordinate-item-right-part {
  flex: 1;
  margin-left: 36rpx;
  display: flex;    
  flex-direction: column;
}

.coordinate-name-box {
  display: flex;
  align-items: flex-end;
}

.coordinate-name-head {
  flex: 1;
  font-size: 17px;
  font-weight: 600;
}

.coordinate-name-foot {
  font-size: 12px;
  color: #eb6159;
}

.coordinate-description {
  margin: 10rpx 0;
  height: 54px;
  width: 100%;
  color: #353535;
  font-size:14px;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box; 
  line-height: 18px;
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 3; 
  overflow: hidden; 
}


