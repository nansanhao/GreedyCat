/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page {
  background-color: #f8f8f8;
  font-size: 17px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}


/* --------------------------------------globalUI----------------------------------------- */

.ui-cells-title {
  margin-top: 0.77em;
  margin-bottom: 0.3em;
  padding-left: 15px;
  padding-right: 15px;
  color: #999;
  font-size: 14px;
}

.ui-cells {
  position: relative;
  background-color: #fff;
  line-height: 1.41176471;
  font-size: 17px;
}

.ui-cells:before {
  top: 0;
  border-top: 1rpx solid #d9d9d9;
}

.ui-cells:after, .ui-cells:before {
  content: " ";
  position: absolute;
  left: 0;
  right: 0;
  height: 1px;
  color: #d9d9d9;
}

.ui-cells:after {
  bottom: 0;
  border-bottom: 1rpx solid #d9d9d9;
}

.ui-cell {
  padding: 10px 15px;
  position: relative;
  display: flex;
  align-items: center;
}

.ui-cell:before {
  content: " ";
  position: absolute;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #d9d9d9;
  color: #d9d9d9;
  left: 15px;
}

.ui-cell:first-child:before {
  display: none;
}

.ui-active {
  background-color: #ececec;
}


.ui-cell-head image {
  margin-right: 5px;
  vertical-align: middle;
  width: 20px;
  height: 20px;
}

.ui-cell-body {
  flex: 1;
}

.ui-cell-foot {
  text-align: right;
  color: #999;
}

.ui-cell-foot-in-access {
  padding-right: 13px;
  position: relative;
}

.ui-cell-foot-in-access:after {
  content: " ";
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #c8c8cd;
  border-style: solid;
  transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -4px;
  right: 2px;
}

.ui-title-box{
  position: relative;
  background-color: #fff;
  line-height: 1.41176471;
  font-size: 17px;
}

.ui-title-text {
  padding: 10px 15px;
  color:#EB6159;
  position: relative;
  text-align: center;
}
/* --------------------------------------formItem----------------------------------------- */

.ui-cell-switch {
  padding-top: 6px;
  padding-bottom: 6px;
}

.ui-cell-input {
  padding-top: 0;
  padding-bottom: 0;
}

.ui-input {
  height: 2.58823529em;
  min-height: 2.58823529em;
  line-height: 2.58823529em;
}

.ui-textarea {
  display: block;
  width: 100%;
}

.ui-textarea-counter {
  color: #b2b2b2;
  text-align: right;
}

