/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page-body {
  padding-bottom: 40px;
}

/* --------------------------------------globalUI----------------------------------------- */

.ui-cells-title {
  margin-top: 0.77em;
  margin-bottom: 0.3em;
  padding-left: 15px;
  padding-right: 15px;
  color: #999;
  font-size: 14px;
}

.ui-cells {
  position: relative;
  background-color: #fff;
  line-height: 1.41176471;
  font-size: 17px;
}

.ui-cells:before {
  top: 0;
  border-top: 1rpx solid #d9d9d9;
}

.ui-cells:after, .ui-cells:before {
  content: " ";
  position: absolute;
  left: 0;
  right: 0;
  height: 1px;
  color: #d9d9d9;
}

.ui-cells:after {
  bottom: 0;
  border-bottom: 1rpx solid #d9d9d9;
}

.ui-cell {
  padding: 10px 15px;
  position: relative;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.ui-cell:before {
  content: " ";
  position: absolute;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #d9d9d9;
  color: #d9d9d9;
  left: 15px;
}

.ui-cell:first-child:before {
  display: none;
}

.ui-active {
  background-color: #ececec;
}

.ui-cell-body {
  flex: 1;
}

.ui-cell-foot {
  text-align: right;
  color: #999;
}

.ui-cell-foot-in-access {
  padding-right: 13px;
  position: relative;
}

.ui-cell-foot-in-access:after {
  content: " ";
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #c8c8cd;
  border-style: solid;
  transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  top: -2px;
  position: absolute;
  top: 50%;
  margin-top: -4px;
  right: 2px;
}

/* --------------------------------------formItem----------------------------------------- */

.ui-cell-switch {
  padding-top: 6px;
  padding-bottom: 6px;
}

.ui-cell-input {
  padding-top: 0;
  padding-bottom: 0;
}

.ui-input {
  height: 2.58823529em;
  min-height: 2.58823529em;
  line-height: 2.58823529em;
}

.ui-textarea {
  display: block;
  width: 100%;
}

.ui-textarea-counter {
  color: #b2b2b2;
  text-align: right;
}

.ui-cell-warn, .ui-textarea-counter-warn {
  color: #e64340;
}

.ui-btn-area {
  margin: 1.17647059em 15px 0.3em;
}

.ui-grids {
  border-top: 1rpx solid #d9d9d9;
  border-left: 1rpx solid #d9d9d9;
  overflow: hidden;
}

.ui-grid {
  position: relative;
  float: left;
  padding: 20px 10px;
  width: 33.33333333%;
  box-sizing: border-box;
  border-right: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9;
}

.ui-grid-icon {
  display: block;
  width: 28px;
  height: 28px;
  margin: 0 auto;
}

.ui-grid-label {
  margin-top: 5px;
  display: block;
  text-align: center;
  color: #000;
  font-size: 14px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
